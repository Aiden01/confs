[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 50

format = <label>
format-underline = #f50a4d
format-warn = <label-warn>
format-warn-underline = ${self.label-warn-foreground}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.warning}

