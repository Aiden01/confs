[colors]
;background = ${xrdb:color0:#222}
background = #00ffffff
background-alt = #d94801
;foreground = ${xrdb:color7:#222}
foreground = #fff
foreground-alt = #fff
primary = #fd8d3c
secondary = #fdd0a2
alert = #ff0000
great = #2cbd40
power = #ffb52a
warn = #ffff00
warn-fore = #000

[bar/primary]
monitor = ${env:MONITOR:eDP1:HMDI1}

height = 32
line-size = 5

width = 100%
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-color = #f00

border-size = 0
border-color = ${colors.background-alt}

padding-left = 0
padding-right = 0

module-margin = 0

font-0 = "Source Code Pro:style=Bold:pixelsize=8;1"
font-1 = "Font Awesome 5 Free:style=Solid:pixelsize=11;1"
font-2 = "Font Awesome 5 Brands:pixelsize=11;1"
font-3 = Weather Icons:size=12;1

modules-left = i3
; modules-center = nvidia proc_count system_load cpu_ghz cpu memory temperature filesystem batterypower batterypower1 wlan eth
; modules-right = weather music battery battery1 date xbacklight alsa 
modules-center = music weather 
modules-right = xbacklight alsa system_load mem cpu_ghz temperature filesystem batterypower batterypower1 wlan eth battery battery1 date 

; Bottom of screen
bottom = true

tray-position = right
tray-padding = 1
tray-transparent = true
tray-background = ${colors.background}

;wm-restack = bspwm
wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:25:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /boot

format-mounted-underline = #8c6bb1
format-unmounted-underline = #0d2bde

;label-mounted = %{F${self.format-mounted-underline}}%mountpoint%%{F-} %percentage_used%%
label-mounted = %{F#8c6bb1}%mountpoint%%{F-} %percentage_used%%
label-unmounted = 
label-unmounted-foreground = ${colors.foreground-alt}
format-background = #fface8
format-mounted-background = #bb1e1529

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true
strip-wsnumbers = true

label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-unfocused-background = ${colors.background}
label-unfocused-underline = ${colors.secondary} 
label-unfocused-padding = ${self.label-focused-padding}

label-visible-background = ${colors.background}
label-visible-underline = ${colors.primary} 
label-visible-padding = ${self.label-focused-padding}

label-occupied = %index%
label-occupied-padding = ${self.label-focused-padding}

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}

label-empty = _%index%_
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = ${self.label-focused-padding}


