w = 400
imgsz = 128
local function interp (s, t)
    return s:gsub('(#%b{})', function (w)
        return t[w:sub(3, -2)] or w
    end)
end

conky.config = {
    lua_load = '/home/user/conkyutil.lua',
    alignment = 'bottom_middle',
    background = true,
    border_width = 1,
    cpu_avg_samples = 10,
	default_color = 'black',
    default_outline_color = 'black',
    default_shade_color = 'black',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = false,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'Noto Sans:black:size=9',
    gap_x = 5,
    gap_y = w / 5,
    minimum_height = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'override',
    own_window_transparent = true,
    stippled_borders = 0,
    update_interval = 5.0,
    update_interval_on_battery = 10.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = true,
    show_graph_range = true,
    top_cpu_separate = false,

    maximum_width = w,
    minimum_width = w,
}

conky.text = interp([[
$processes #{emph}processes $alignr PID CPU MEM#{normal}
${top name 1} $alignr ${top pid 1} ${top cpu 1} ${top mem 1}
${top name 2} $alignr ${top pid 2} ${top cpu 2} ${top mem 2}
${top name 3} $alignr ${top pid 3} ${top cpu 3} ${top mem 3}
${top name 4} $alignr ${top pid 4} ${top cpu 4} ${top mem 4}

${top_mem name 1} $alignr ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
${top_mem name 2} $alignr ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
${top_mem name 3} $alignr ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
${top_mem name 4} $alignr ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}

${top_io name 1} $alignr ${top_io io_read 1} ${top_io io_write 1} ${top_io pid 1} ${top_io cpu 1} ${top_io mem 1}
${top_io name 2} $alignr ${top_io io_read 2} ${top_io io_write 2} ${top_io pid 2} ${top_io cpu 2} ${top_io mem 2}
${top_io name 3} $alignr ${top_io io_read 3} ${top_io io_write 3} ${top_io pid 3} ${top_io cpu 3} ${top_io mem 3}
${top_io name 4} $alignr ${top_io io_read 4} ${top_io io_write 4} ${top_io pid 4} ${top_io cpu 4} ${top_io mem 4}

${image /home/user/Downloads/archlinux.png -p #{imgx},#{imgy} -s #{imgsz}x#{imgsz}}
]], {
    w = w,
    imgsz = imgsz,
    imgx = w / 2 - imgsz / 2,
    imgy = 1080 / 2,
    halfw = w * 0.49,
    quartw = w * 0.245,
    gheight = 25,
    gcolors = "#FF0000 #FFFF00",
    emph = '${font Noto Sans:size=9}',
    normal = '$font',
})

-- $alignc${font Source Code Pro:size=35}$alignc${color}${time %H} ${color}${time %M} ${time %S}$font
