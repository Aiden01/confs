conky.config = {
    alignment = 'middle_middle',
    background = true,
    border_width = 1,
    cpu_avg_samples = 10,
	default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = false,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'Source Code Pro:black:size=10',
    gap_x = 5,
    gap_y = 35,
    minimum_height = 5,
	minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'override',
	own_window_transparent = true,
    stippled_borders = 0,
    update_interval = 1.0,
    update_interval_on_battery = 10.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = true,
    show_graph_range = true,
}

conky.text = [[
${font Source Code Pro:bold:size=18}$nodename $sysname $kernel on $machine${font}

${color grey}BAT0$color ${battery_percent BAT0}% ${color yellow}${battery_bar BAT0}$color
${color grey}BAT1$color ${battery_percent BAT1}% ${color yellow}${battery_bar BAT1}$color

${color grey}Uptime:$color $uptime
${color grey}CPU Usage:$color $cpu% ${freq_g}GHz ${cpubar 6}
${cpugraph}
${color grey}RAM:$color $mem/$memmax $memperc% ${membar 6}
${color grey}Swap:$color $swap/$swapmax $swapperc% ${swapbar 6}
${memgraph}

/ $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
${color grey}Disk IO read/write:$color ${diskio_read} ${diskio_write}
${diskiograph_read}
${diskiograph_write}

${if_up wlp4s0}${color gray}WiFi Up:$color ${upspeed wlp4s0} ${color grey} Down:$color ${downspeed wlp4s0}${else}WiFi down${endif}
${if_up wlp4s0}${downspeedgraph wlp4s0}
${upspeedgraph wlp4s0}${endif}

$alignc${font Source Code Pro:size=35}$alignc${color}${time %H} ${color}${time %M} ${color grey}${time %S}$font

${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
${color grey}Name              PID   CPU%   MEM%
${color}${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color}${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color}${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color}${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${color grey}By memory:
${color}${top_mem name 1} ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
${color}${top_mem name 2} ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
${color}${top_mem name 3} ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
${color}${top_mem name 4} ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}
${color grey}By IO:
${color}${top_io name 1} ${top_io pid 1} ${top_io cpu 1} ${top_io mem 1} ${top_io io_read 1} ${top_io io_write 1}
${color}${top_io name 2} ${top_io pid 2} ${top_io cpu 2} ${top_io mem 2} ${top_io io_read 2} ${top_io io_write 2}
${color}${top_io name 3} ${top_io pid 3} ${top_io cpu 3} ${top_io mem 3} ${top_io io_read 3} ${top_io io_write 3}
${color}${top_io name 4} ${top_io pid 4} ${top_io cpu 4} ${top_io mem 4} ${top_io io_read 4} ${top_io io_write 4}
]]
