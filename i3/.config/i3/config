# Window border
new_window normal 1

# Hide title for extremely common windows
# for_window [title="LXTerminal|Firefox|Chromium|Chrome$"] border pixel 1
for_window [title="Firefox|Chromium|Chrome$"] border pixel 1
for_window [class="Docky"] floating enable

# Colors
# 1271A1 is slightly darker Arch blue
# class                 border  backgr. text    indicator
client.focused          #E5E7E7 #E5E7E7 #1271A1 #2e9ef4
client.focused_inactive #1271A1 #00A199 #E5E7E7 #484e50
client.unfocused        #062636 #062636 #E5E7E7 #484e50

client.urgent           #2f343a #900000 #ffffff #900000

# Program launcher
bindsym $mod+d exec launcher.sh

# Start a terminal or browser
set $terminal terminal.sh 
set $browser firefox 

bindsym $mod+Return exec $terminal
bindsym $mod+x exec $terminal
bindsym F8 exec $terminal
bindsym $mod+z exec $terminal 
bindsym $mod+c exec $browser 
bindsym $mod+n exec $browser

bindsym $mod+l exec locker.sh
bindsym $mod+Shift+l exec backlightoff.sh

# Requirements: nm-applet i3lock i3bar redshift scrot imagemagick lxterminal unison feh
